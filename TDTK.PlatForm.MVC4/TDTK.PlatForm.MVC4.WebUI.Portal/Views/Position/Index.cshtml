@{
    ViewBag.Title = "岗位维护";
}
<style type="text/css">
    #searchName {
        height: 20px;
        margin: 0;
        padding: 0 2px;
        box-sizing: content-box;
        width: 110px;
    }
</style>

    <!--数据表格开始-->
    <table id="dg"></table>
    <div id="tableToolbar" style="padding:5px;" iconcls='icon-edit'>
        <span>账号查询：</span><input id="searchName" type="text" name="searchName" title=" 请输入要查询的用户名" />
        <a href="#" class="easyui-linkbutton" data-options="iconCls:'icon-search',plain:true" onclick="mysearch()">查询</a>
        <a href="#" class="easyui-linkbutton" data-options="iconCls:'icon-add',plain:true" onclick="myAdd()">添加</a>
        <a href="#" class="easyui-linkbutton" data-options="iconCls:'icon-edit',plain:true" onclick="myEdit()">修改</a>
        <a href="#" class="easyui-linkbutton" data-options="iconCls:'icon-remove',plain:true" onclick="mydelete()">删除</a>
        <a href="#" class="easyui-linkbutton" data-options="iconCls:'icon-no',plain:true" onclick="myIsForbid()">禁用/启用</a>

    </div>
    <!--数据表格开始-->
    <!--单条数据展示开始-->
    <div id="dlg" class="easyui-dialog" title="修改数据" style="width:500px;height:300px;padding:10px"
         data-options="buttons:'#dlg-buttons',modal:true,cache: false,closed:true">
        <form id="formData" method="post">
            <p><span>岗位名称：</span><input type="text" name="editPositionName" id="editPositionName" title="请填写岗位名称"></p>
            <p><span>备&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;注：</span><textarea id="editRemark" name="editRemark" cols="40" rows="5" title="请填写备注"></textarea></p>
            <input type="hidden" name="editPositionCode" id="editPositionCode" /><input type="hidden" name="editIsForbid" id="editIsForbid" />
        </form>
    </div>
    <div id="dlg-buttons">
        <a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-save'" onclick="mySave()">保存</a>
        <a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-cancel'" onclick="javascript:$('#dlg').dialog('close')">Close</a>
    </div>
    <!--单条数据展示结束-->



<script type="text/javascript">
    $(function () {
    
        /**************************************数据表格操作设置开始*******************************/
        $("#dg").datagrid({
            width: 1000,
            //自适应列内容
            fitColumns: true,
            //只允许选择一行
            singleSelect: true,
            //显示分页栏
            pagination: true,
            //显示行号
            rownumbers: true,
            //初始化的页码
            pageNumber: 1,
            //初始化的页容量
            pageSize: 5,
            //初始化页面大小选择列表
            pageList: [5, 10, 15, 20],
            //指明哪一个字段是标识字段
            idField: 'PositionCode',
            //在从远程站点加载数据的时候显示提示消息
            loadMsg: '正在获取数据中。。。',
            //获取后台json数据
            url: '/Position/GetPositionJsonData',
            //显示斑马线效果，其实就是各行换色
            striped: true,
            toolbar: '#tableToolbar',
            //列对象数组，该对象必须数组
            columns: [[
                {
                    field: 'ck',
                    //显示复选框
                    checkbox: true,
                },
                {
                    //数据绑定字段值
                    field: 'PositionCode',
                    //显示文本值
                    title: '岗位编号',
                    //设置为可排序字段
                    sortable: true,
                    //排序方式
                    order: 'desc',
                    //这个是设置该字段宽度为100%，解决没设置字段时，右侧会出现空白列问题。当然前提是必须设置 表格的：fitColumns: true,
                    width: 100
                },
                {
                    field: 'PositionName',
                    title: '岗位名称',
                    sortable: true,
                    order: 'asc',
                    width: 100
                },
                {
                    field: 'Remark',
                    title: '备注',
                    //隐藏列
                    //hidden: true,
                    width: 100
                },
                {
                    field: 'IsForbid',
                    title: '是否禁用',
                    sortable: true,
                    order: 'asc',
                    width: 100,
                    //列属性：对数据进行格式化处理
                    formatter: function (value, row, index) {
                        if (value == 1) {
                            return value = "禁用";
                        } else {
                            return value = "启用";
                        }
                    }
                }
            ]],

        });
        /**************************************数据表格操作设置结束*******************************/
    });

    /**************************************数据表格按钮操作开始*******************************/
    //查询
    function mysearch() {
        $('#dg').datagrid('load', {
            searchName: $.trim($("#searchName").val()),
        });
    }

    //修改数据
    function myEdit() {
        var rowsData = $('#dg').datagrid('getSelected');
        if (rowsData) {
            $.post("/Position/GetDemoByID", { PositionCode: rowsData.PositionCode }, function (data) {
                SetModel(data);
            })
        }

    }
    //删除按钮
    function mydelete() {
        $.messager.confirm('确认', '您确认想要删除记录吗？', function (r) {
            if (r) {
                var rowsData = $('#dg').datagrid('getSelected');
                if (rowsData) {
                    $.post("/Position/Delete", { PositionCode: rowsData.PositionCode }, function (data) {
                        if (data == 'ok') {
                            $('#dg').datagrid('load');//刷新数据
                            $.messager.show({
                                title: '提示',
                                msg: '删除成功！',
                                timeout: 5000,
                                showType: 'slide'
                            });
                            $('#dlg').dialog('close');
                        } else {
                            $.messager.show({
                                title: '提示',
                                msg: '删除失败！',
                                timeout: 5000,
                                showType: 'slide'
                            });
                            $('#dlg').dialog('close');
                        }

                    });
                }
            }
        });
    }

    //禁用/启用数据
    function myIsForbid() {
        var rowsData = $('#dg').datagrid('getSelected');
        if (rowsData) {
            $.post("/Position/IsForbid", { PositionCode: rowsData.PositionCode }, function (data) {
                var serverData = data.split(':');
                if (serverData[0] == 'ok') {
                    $('#dg').datagrid('load');//刷新数据
                    $.messager.show({
                        title: '提示',
                        msg: serverData[1],
                        timeout: 5000,
                        showType: 'slide'
                    });
                    $('#dlg').dialog('close');
                } else if (serverData[0] == 'no') {
                    $.messager.show({
                        title: '提示',
                        msg: serverData[1],
                        timeout: 5000,
                        showType: 'slide'
                    });
                    $('#dlg').dialog('close');
                } else {
                    $.messager.show({
                        title: '提示',
                        msg: '数据异常，操作失败！',
                        timeout: 5000,
                        showType: 'slide'
                    });
                    $('#dlg').dialog('close');
                }
            })
        }

    }

    //添加按钮
    function myAdd() {
        clearForm(formData);
        $('#dlg').dialog('open');
    }

    //设置修改对话框的值
    function SetModel(data) {
        $('#editPositionCode').val(data.PositionCode);
        $('#editPositionName').val(data.PositionName);
        $('#editRemark').val(data.Remark);
        $('#editIsForbid').val(data.IsForbid);
        $('#dlg').dialog('open');
    }
    //保存修改的数据
    function mySave() {
        var ISpositionCode = $.trim($('#editPositionCode').val());
        if (ISpositionCode != "") {
            EditSave();
        } else {
            AddSave();
        }
    }
    function EditSave() {
        $.post("/Position/Edit", $("#formData").serialize(), function (data) {
            var serverData = data.split(':');
            if (serverData[0] == 'ok') {
                $('#dg').datagrid('load');//刷新数据
                $.messager.show({
                    title: '提示',
                    msg: serverData[1],
                    timeout: 5000,
                    showType: 'slide'
                });
                $('#dlg').dialog('close');
                clearForm(formData);
            } else if (serverData[0] == "no") {
                $.messager.show({
                    title: '提示',
                    msg: serverData[1],
                    timeout: 5000,
                    showType: 'slide'
                });
                $('#dlg').dialog('close');
                clearForm(formData);
            } else {
                $.messager.show({
                    title: '提示',
                    msg: data[1],
                    timeout: 5000,
                    showType: 'slide'
                });
                clearForm(formData);
            }
        });
    }
    //清理表单的值
    function clearForm(form) {
        // iterate over all of the inputs for the form
        // element that was passed in
        $(':input', form).each(function () {
            var type = this.type;
            var tag = this.tagName.toLowerCase(); // normalize case
            // it's ok to reset the value attr of text inputs,
            // password inputs, and textareas
            if (type == 'text' || type == 'password' || tag == 'textarea' || type == 'hidden')
                this.value = "";
                // checkboxes and radios need to have their checked state cleared
                // but should *not* have their 'value' changed
            else if (type == 'checkbox' || type == 'radio')
                this.checked = false;
                // select elements need to have their 'selectedIndex' property set to -1
                // (this works for both single and multiple select elements)
            else if (tag == 'select')
                this.selectedIndex = -1;
        });
    };

    //添加数据--保存
    function AddSave() {
        $.post("/Position/Add", $("#formData").serialize(), function (data) {
            if (data == 'ok') {
                $('#dg').datagrid('load');//刷新数据
                $.messager.show({
                    title: '提示',
                    msg: '添加成功！',
                    timeout: 5000,
                    showType: 'slide'
                });
                $('#dlg').dialog('close');
                clearForm(formData);
            } else {
                $.messager.show({
                    title: '提示',
                    msg: '添加失败！',
                    timeout: 5000,
                    showType: 'slide'
                });
                $('#dlg').dialog('close');
                clearForm(formData);
            }
        });
    }

    /**************************************数据表格按钮操作开始*******************************/
</script>
